#!/usr/bin/env zsh

function main()
{
    local root=${${(%):-%x}:A:h}
    local build=$root/build

    rm -fr $build
    mkdir -p $build

    export CC=clang
    export CFLAGS='-march=native -mtune=native'
    meson --warnlevel 1 -D c_std=gnu11 $build

    cd $build
    mesonconf
    ninja
}

main $@
