#!/usr/bin/env zsh

function main()
{
    local root=${${(%):-%x}:A:h}
    local build=$root/build

    rm -fr $build
    mkdir -p $build

    export CFLAGS='-march=native -mtune=native -DDEBUG -Wno-unused-parameter'
    meson --warnlevel 3 -D c_std=gnu11 $build

    cd $build
    meson configure
    ninja
}

main $@
